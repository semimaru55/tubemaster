<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tubemaster" default="compile.module.tubemaster">
  <dirname property="module.tubemaster.basedir" file="${ant.file.module_tubemaster}"/>
  
  <property name="module.jdk.home.tubemaster" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tubemaster" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tubemaster" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tubemaster" value="${compiler.args}"/>
  
  <property name="tubemaster.output.dir" value="${module.tubemaster.basedir}/out/production/tubemaster"/>
  <property name="tubemaster.testoutput.dir" value="${module.tubemaster.basedir}/out/test/tubemaster"/>
  
  <path id="tubemaster.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tubemaster.module.production.classpath">
    <path refid="${module.jdk.classpath.tubemaster}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tubemaster.runtime.production.module.classpath">
    <pathelement location="${tubemaster.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tubemaster.module.classpath">
    <path refid="${module.jdk.classpath.tubemaster}"/>
    <pathelement location="${tubemaster.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tubemaster.runtime.module.classpath">
    <pathelement location="${tubemaster.testoutput.dir}"/>
    <pathelement location="${tubemaster.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tubemaster">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tubemaster">
    <patternset refid="excluded.from.module.tubemaster"/>
  </patternset>
  
  <path id="tubemaster.module.sourcepath">
    <dirset dir="${module.tubemaster.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tubemaster" depends="compile.module.tubemaster.production,compile.module.tubemaster.tests" description="Compile module tubemaster"/>
  
  <target name="compile.module.tubemaster.production" depends="register.custom.compilers" description="Compile module tubemaster; production classes">
    <mkdir dir="${tubemaster.output.dir}"/>
    <javac2 destdir="${tubemaster.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tubemaster}/javac" encoding="Windows-1252">
      <compilerarg line="${compiler.args.tubemaster}"/>
      <bootclasspath refid="tubemaster.module.bootclasspath"/>
      <classpath refid="tubemaster.module.production.classpath"/>
      <src refid="tubemaster.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tubemaster"/>
    </javac2>
    
    <copy todir="${tubemaster.output.dir}">
      <fileset dir="${module.tubemaster.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tubemaster.tests" depends="register.custom.compilers,compile.module.tubemaster.production" description="compile module tubemaster; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tubemaster" description="cleanup module">
    <delete dir="${tubemaster.output.dir}"/>
    <delete dir="${tubemaster.testoutput.dir}"/>
  </target>
</project>